# ================================================
# HACKATHON PROJECT ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env at the root of the project and fill in your actual values

# ------------------------------------------------
# Backend Configuration
# ------------------------------------------------

# App Configuration
APP_NAME=Hackathon Backend
API_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration - Neon PostgreSQL
# You can either use the full connection string OR individual components

# Option 1: Full connection string (recommended for Neon)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Option 2: Individual components (alternative)
DB_HOST=your-neon-host
DB_PORT=5432
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=your-database

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ------------------------------------------------
# Frontend Configuration
# ------------------------------------------------

# Backend API URL
VITE_API_URL=http://localhost:8000

